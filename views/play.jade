extends layout

block content

    include ./popup.jade

    #game-container
        button#round-pause(type='button') Pause
        #floor
            #clone-source.partier.hide


        #scoreboard
            #status

                .row
                    .col-xs-4
                        p 
                            strong Score: 
                            span#log-score
                        p 
                            strong Moves: 
                            span#log-moves

                    .col-xs-4
                        p 
                            strong Combos: 
                            span#log-combos
                        p 
                            strong Solids: 
                            span#log-solids

                    .col-xs-4
                        p 
                            strong Originals: 
                            span#log-originals
                        p 
                            strong Duplicates: 
                            span#log-duplicates

                .timer
                    span.minutes 0
                    span  minutes 
                    span.seconds 0
                    span  seconds 


        #grid
            each rowIndex in [1,2,3,4,5]
                .grid-row
                    each colIndex in [1,2,3,4,5]
                        .tile(data-row=rowIndex,data-column=colIndex)

    #roundEndStats-container

block append js
    //- util
    script(src='/scripts/game/util.js')

    //- classes
    script(src='/scripts/game/classes/Player.js')
    script(src='/scripts/game/classes/Round.js')
    script(src='/scripts/game/classes/Move.js')
    script(src='/scripts/game/classes/Timer.js')

    //- other
    script(src='/scripts/game/ui.js')
    script(src='/scripts/game/variables.js')
    script(src='/scripts/game/animate.js')
    script(src='/scripts/game/statsMgr.js')
    script(src='/scripts/game/menuMgr.js')
    script(src='/scripts/game/floorMgr.js')
    script(src='/scripts/game/gridMgr.js')
    script(src='/scripts/game/tileMgr.js')

    //- init

    script(src='/scripts/game/init.js')