extends layout

block content
    #mobile-container.container
        h1= pageTitle
        p= description

        h2 Resources
        p This game could not have been developed without these awesome libs.

        each resource in resources
            p
                strong
                    a(href=resource.url)= resource.name  
                span  - #{resource.description}


        h2 Developers
        p Stuff about the developers


        h2 Press Kit
        p Download the press kit

    include ./footer.jade